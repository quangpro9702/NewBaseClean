<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.gapo.gapoproject.presentation.ui.fragment.list.NewsFeedFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_news_feed">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.gapo.gapoproject.presentation.ui.fragment.detail.NewFeedDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_new_feed_detail" />
</navigation>